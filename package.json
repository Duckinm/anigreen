{
  "name": "anigreen",
  "description": "your week in anime ðŸŒ ",
  "author": "itsMapleLeaf",
  "license": "MIT",
  "private": true,
  "scripts": {
    "prepare": "remix setup node",
    "dev": "run-p --race --print-label remix-dev graphql-watch",
    "build": "pnpm graphql && remix build",
    "test-dev": "run-p --race --print-label vitest-watch cypress-open remix-dev graphql-watch",
    "test": "run-p --print-label vitest-run build lint typecheck && run-p --race --print-label start cypress-run",
    "start": "remix-serve build",
    "lint": "eslint --ext js,ts,tsx .",
    "lint-fix": "pnpm lint -- --fix",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "remix-dev": "remix dev",
    "graphql": "graphql-codegen --config graphql.config.yml",
    "graphql-watch": "pnpm graphql -- --watch",
    "vitest-watch": "vitest",
    "vitest-run": "vitest --no-watch",
    "cypress-open": "cypress open",
    "cypress-run": "wait-on tcp:localhost:3000 && cypress run"
  },
  "dependencies": {
    "@graphql-typed-document-node/core": "^3.1.1",
    "@heroicons/react": "^1.0.5",
    "@radix-ui/react-collapsible": "^0.1.5",
    "@radix-ui/react-dropdown-menu": "^0.1.4",
    "@radix-ui/react-tooltip": "^0.1.6",
    "@remix-run/dev": "^1.1.3",
    "@remix-run/react": "^1.1.3",
    "@remix-run/serve": "^1.1.3",
    "@remix-run/server-runtime": "^1.1.3",
    "@twind/preset-line-clamp": "^1.0.0-next.28",
    "@twind/tailwind": "^1.0.0-next.28",
    "date-fns": "^2.28.0",
    "date-fns-tz": "^1.2.2",
    "dotenv": "^14.3.2",
    "graphql": "^16.3.0",
    "graphql-tag": "^2.12.6",
    "react": "^18.0.0-rc.0",
    "react-dom": "^18.0.0-rc.0",
    "react-router": "^6.2.1",
    "react-router-dom": "^6.2.1",
    "remix": "^1.1.3",
    "twind": "^1.0.0-next.28",
    "zod": "^3.11.6"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.4.0",
    "@graphql-codegen/typescript": "2.4.2",
    "@graphql-codegen/typescript-operations": "2.2.2",
    "@itsmapleleaf/configs": "^1.1.2",
    "@types/node": "^17.0.13",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "cypress": "^9.3.1",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-unicorn": "^40.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "typescript": "^4.5.5",
    "vitest": "^0.2.5",
    "wait-on": "^6.0.0"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false,
  "eslintConfig": {
    "extends": [
      "./node_modules/@itsmapleleaf/configs/eslint"
    ],
    "ignorePatterns": [
      "**/node_modules/**",
      "**/generated/**",
      "**/build/**",
      "**/.cache/**",
      "**/*.out.*"
    ],
    "rules": {
      "import/no-unused-modules": "off"
    },
    "overrides": [
      {
        "files": "cypress/**",
        "parserOptions": {
          "project": "./cypress/tsconfig.json"
        }
      }
    ]
  },
  "prettier": "@itsmapleleaf/configs/prettier"
}
