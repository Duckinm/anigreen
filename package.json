  "private": true,
  "scripts": {
    "prepare": "remix setup node",
    "dev": "concurrently 'remix dev' 'pnpm tailwind -- --watch' 'pnpm graphql-codegen -- --watch'",
    "build": "pnpm tailwind -- --minify && pnpm graphql-codegen && remix build",
    "start": "remix-serve build",
    "lint": "eslint --ext js,ts,tsx .",
    "lint-fix": "pnpm lint -- --fix",
    "format": "prettier --write .",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "tailwind": "tailwindcss --config tailwind.config.cjs --input ./app/modules/ui/tailwind.css --output ./app/modules/ui/tailwind.out.css",
    "graphql-codegen": "graphql-codegen --config graphql.config.yml"
  },
  "dependencies": {
    "@graphql-typed-document-node/core": "^3.1.1",
    "@heroicons/react": "^1.0.5",
    "@popperjs/core": "^2.11.2",
    "@radix-ui/react-collapsible": "^0.1.5",
    "@radix-ui/react-dropdown-menu": "^0.1.4",
    "@radix-ui/react-tooltip": "^0.1.6",
    "@remix-run/dev": "^1.1.3",
    "@remix-run/react": "^1.1.3",
    "@remix-run/serve": "^1.1.3",
    "@remix-run/server-runtime": "^1.1.3",
    "@sytexa/tzdb": "^6.44.0",
    "clsx": "^1.1.1",
    "date-fns": "^2.28.0",
    "date-fns-tz": "^1.2.2",
    "dotenv": "^14.3.2",
    "graphql": "^16.3.0",
    "graphql-tag": "^2.12.6",
    "react": "^18.0.0-rc.0",
    "react-dom": "^18.0.0-rc.0",
    "react-popper": "^2.2.5",
    "react-router": "^6.2.1",
    "react-router-dom": "^6.2.1",
    "remix": "^1.1.3",
    "zod": "^3.11.6"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.4.0",
    "@graphql-codegen/typed-document-node": "^2.2.2",
    "@graphql-codegen/typescript": "2.4.2",
    "@graphql-codegen/typescript-operations": "2.2.2",
    "@itsmapleleaf/configs": "^1.1.2",
    "@tailwindcss/line-clamp": "^0.3.1",
    "@types/node": "^17.0.13",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "autoprefixer": "^10.4.2",
    "concurrently": "^7.0.0",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-unicorn": "^40.1.0",
    "node-fetch": "^3.2.0",
    "postcss": "^8.4.5",
    "prettier": "^2.5.1",
    "tailwindcss": "^3.0.18",
    "typescript": "^4.5.5",
    "vite": "^2.7.13",
    "vitest": "^0.2.5"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false,
  "eslintConfig": {
    "extends": [
      "./node_modules/@itsmapleleaf/configs/eslint"
    ],
    "ignorePatterns": [
      "**/node_modules/**",
      "**/generated/**",
      "**/build/**",
      "**/.cache/**",
      "**/*.out.*"
